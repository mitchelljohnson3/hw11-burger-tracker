<div class="container">
    <div class="row">
        <div class="col-4" id="not-devoured">
            <h1>Burgers ready to be eaten!</h1>
            <ul>
                {{#each data}}
                {{#unless devoured}}
                <li>
                    <p id="burgers">ID: {{id}} Burger Name: {{burger_name}}</p>
                    <form action="/{{id}}" method="POST">
                        <button type="submit" name="id">Devour it!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-4">
            <h3>Make a new burger:</h3>
            <form action="/" method="POST">
                <textarea id="new-burger-input" type="text" name="burger_name"></textarea>

                <button type="submit">Submit</button>
            </form>
        </div>

        <div class="col-4" id="devoured">
            <h1>Burgers that have been devoured!</h1>
            <ul>
                {{#each data}}
                {{#if devoured}}
                <li>
                    <p id="burgers">ID: {{id}} Burger Name: {{burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>